<Window x:Class="WpfApp7.SnowFlake"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="SnowFlake" Height="345" Width="300">
    <Viewbox Stretch="Uniform">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5,5,5,0">
                <Button x:Name="btnStart" Click="btnStart_Click" Content="Start" Width="50" />
                <TextBlock x:Name="tbLabel" Margin="20,5,0,0" />
            </StackPanel>
            <Canvas x:Name="canvas1" Width="300" Height="300" Margin="5" ></Canvas>
        </StackPanel>
    </Viewbox>
</Window>
